# Database Configuration
DATABASE_URL=postgresql+asyncpg://username_enum:password@localhost:5432/username_enum

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Username Enumeration Configuration
ENUM_CONFIG_PATH=backend/config/username_enum_sources.json
MAX_CONCURRENT_REQUESTS=50
DEFAULT_TIMEOUT=10.0
MAX_RETRIES=2

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_HOURS=24

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60

# Fuzzy Matching Configuration
FUZZY_THRESHOLD=70
MAX_USERNAME_VARIATIONS=50

# Logging Configuration
LOG_LEVEL=INFO

# Development Settings
DEBUG=true

# Performance Configuration
CONNECTION_POOL_SIZE=20
MAX_OVERFLOW_CONNECTIONS=40

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
