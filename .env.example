# Environment Configuration Example

# Copy this file to .env and update with your actual configuration

# Service Configuration
MIN_CONFIDENCE=0.3
MAX_RESULTS=100

# Cache Configuration
CACHE_ENABLED=true
USE_REDIS=false
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_KEY_PREFIX=username_enum:

# Rate Limiting Configuration
RATE_LIMIT_MINUTE=10
RATE_LIMIT_HOUR=100
RATE_LIMIT_BURST=5
RATE_LIMIT_BLOCK_DURATION=300

# Search Rate Limiting (Stricter)
SEARCH_RATE_LIMIT_MINUTE=5
SEARCH_RATE_LIMIT_HOUR=50
SEARCH_RATE_LIMIT_BURST=3
SEARCH_RATE_LIMIT_BLOCK_DURATION=300

# PostgreSQL Configuration
POSTGRES_ENABLED=true
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=osint_db
POSTGRES_MIN_CONNECTIONS=2
POSTGRES_MAX_CONNECTIONS=10

# Neo4j Configuration
NEO4J_ENABLED=true
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/username_enum_api.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1
DEBUG=false

# Testing Flag (set to true when running tests)
TESTING=false
