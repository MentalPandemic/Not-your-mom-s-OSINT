# Application
APP_NAME=OSINT Intelligence Platform
APP_VERSION=1.0.0
DEBUG=True

# PostgreSQL
POSTGRES_USER=osint_user
POSTGRES_PASSWORD=osint_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=osint_db

# Neo4j
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=osint_neo4j_password

# Security
SECRET_KEY=your-secret-key-change-in-production-use-strong-random-string

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Scraping
USER_AGENT=OSINT-Platform/1.0
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=10

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
